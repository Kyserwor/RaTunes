.right {
	float: none;
	margin-left: auto;
	margin-right: auto;
	/**border:3px solid #73AD21;**/
}

body {
	font-family: Motiva Sans Light;
	  background-color: rgba(217, 244, 255, 0.01);
	  text-align: center;
}

.center {
	text-align: center;
}

.logoContain{
	margin: 13px;
	width: 90px;
	height: 90px;
	border-radius: 150px;
	border: 2px solid #73ad21;
	-webkit-border-radius: 260px;
	-moz-border-radius: 260px;
	background: url(/images/RaTunesCover.png) no-repeat;
	background-size: 100% 100%;
	display: block;
	float: left;
	padding: 5px;
}

.menu{
	padding: 25px;
	background-color: #333333;
	float: left;
	width: 20%;
	min-height: 100%;
	/*border-right: 1px solid;*/
	/*border-right-color: #333333;*/
}

.albumsButton{
	color: #070101;
	border-radius: 12px;
	border: 2px solid #fffeff;
	background-color: #f0f0f1;

}

a {
	display: block;
	width: 60px;
}

.-cx-PRIVATE-Shell__nav {
	background-image: linear-gradient( #333333 100%, transparent 50%);
	height: 120px;
	border-bottom-width: 1px;
	-webkit-box-ordinal-group: 2;
	-webkit-order: 1;
	-ms-flex-order: 1;
	order: 1;
	padding: 0 20px;
	/*border-bottom: 1px solid;*/
	/*border-bottom-color: #333333;*/
}

.right {
	float: right;
}

.task{
	background-color: #73ad21;
	height: 60px;
	/*border-bottom: 1px solid;*/
	/*border-bottom-color: #333333;*/
}

.menuContent{
	background-color: #6783b2;
	width: auto;
	height: auto;
	/*border-bottom: 1px solid;*/
	/*border-bottom-color: #333333;*/
}

.logoutButton{
	margin: 10px;
	width: auto;
	color: #070101;
	border: 1px solid #fffeff;
	border-radius: 12px;
	background-color: #f0f0f1;
}

.italic{
	font-style: italic;
	color: #73ad21;
}

.containContent{
	padding: 25px;
	background-color: #5b666b;
	width: auto;
	height: 100%;
}

input:hover {
	/*background: #8FBC8F;*/
	border: 2px solid #6baff1;
}

.logoContain:hover{
	border: 3px solid #6baff1;
}

.logoutButton:hover{
	background-color: rgba(150, 19, 0, 1);
	border: 2px solid #961300;

}

#footer{
	color: #88989d;
	position: fixed;
	border-top: 2px solid #73ad21;
	bottom: 0;
	left: 0;
	background-color: #bfd0d5;
	width: 100%;
	height: 3em;
}

.albumCover{
	margin: 35px;
	height: 291.672px;
	width: 291.672px;
	border: 1px solid #73ad21;
	background-color: #333333;
	float: left;
}

.albumCover:hover{
	border: 2px solid #73ad21;
}

.albumCoverTitle{
	text-align: center;
	color: transparent;
	width: 80px;
	height: 20px;
	background: transparent;
	-webkit-transition: width 2s; /* Safari */
	transition: width 2s;
}

.albumCover:hover > .albumCoverTitle{
	background-color: #fffeff;
	color: #070101;
	width: 288px;
}

.albumTitle{
	color: #070101;
}

.albumButton{
	height: 50px;
	margin: 15px;
	color: #fffeff;
	width: 100%;
	border: 2px solid #333333;
	background-color: #333333;
}

.albumButton:hover{
	background-color: #73ad21;
}